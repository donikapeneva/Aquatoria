//TODO template abstraction
div
    if isAdmin
        span
            h3.pop-up-title upload music

        span(id="error-upload-music-container")
        div.col-md-12.row
            form(role="form" enctype="multipart/form-data" action="" method="post" id="upload-music-form").col-md-7

                input(type="file"
                    multiple="multiple"
                    name="musicFile"
                    id="form-music-file")

                input(type="file"
                    multiple="multiple"
                    name="coverFile"
                    id="form-cover-file")

                input(type="text"
                    name="uploadTitle"
                    id="form-upload-title"
                    placeholder="Title")

                div.choose-category
                    select(id="form-select-category" name="uploadCategory")
                        each category in categories.length ? categories : ['There are no categories']
                            option(value=category) #{category}
                    button(type="button" id="new-category-button") New Category

                input(type="text"
                    name="uploadDescription"
                    id="form-upload-description"
                    placeholder="Description")

                button(type="button" id="upload-button") Upload

                //TODO
                div.message-uploaded

            div#selectedImage.selected-item.col-md-5

script(src="/static/scripts/utils/validator.js")
script(src="/static/scripts/items/music/upload-music.js")
